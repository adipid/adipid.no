{
  "lock": false,
  "tasks": {
    "dev": "deno run -A --watch=static/,routes/,content/ dev.ts",
    "start": "deno run -A dev.ts",
    "update": "deno run -A -r https://fresh.deno.dev/update .",
    "log": "deno run --allow-net=www.omdbapi.com,openlibrary.org --allow-read=./static/api --allow-write=./static/api --allow-env src/log/cli.ts",
    "read": "deno run --allow-read=./static/api --allow-write=./static/api src/log/read_logs.ts",
    "blog": "deno run --allow-write=./content/blog blog.ts",
    "setup:hooks": "deno run -A -r https://deno.land/x/githooks/githooks.ts",
    "check": "deno fmt --check && deno lint"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "imports": {
    "$fresh/": "https://deno.land/x/fresh@1.3.1/",
    "preact": "https://esm.sh/preact@10.15.1",
    "preact/": "https://esm.sh/preact@10.15.1/",
    "preact-render-to-string": "https://esm.sh/*preact-render-to-string@6.2.0",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.1.3",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.2.3",
    "twind": "https://esm.sh/twind@1.0.7",
    "twind/": "https://esm.sh/twind@1.0.7/",
    "@twind/": "https://esm.sh/@twind/",
    "$std/": "https://deno.land/std@0.189.0/",
    "gfm/": "https://deno.land/x/gfm@0.2.5/"
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "fmt": {
    "exclude": ["**/*.md"],
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "githooks": {
    "pre-commit": "check"
  }
}
